<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    android:layout_marginTop="6dp"
    android:background="@color/colorAccent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cart_list_product_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redmi5a" />

    <TextView
        android:id="@+id/cart_list_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Pixel 2 Black"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/cart_list_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cart_list_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Rs. 20,999/-"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cart_list_product_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_list_product_title" />

    <TextView
        android:id="@+id/cart_list_product_cutted_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Rs. 21,999/-"
        android:textColor="#7B000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_list_product_price"
        app:layout_constraintStart_toEndOf="@+id/cart_list_product_price"
        app:layout_constraintTop_toTopOf="@+id/cart_list_product_price" />

    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#7B000000"
        app:layout_constraintBottom_toBottomOf="@+id/cart_list_product_cutted_price"
        app:layout_constraintEnd_toEndOf="@+id/cart_list_product_cutted_price"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cart_list_product_cutted_price"
        app:layout_constraintTop_toTopOf="@+id/cart_list_product_cutted_price"
        app:layout_constraintVertical_bias="0.56" />

    <TextView
        android:id="@+id/cart_list_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/stroke_background"
        android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
        android:drawablePadding="8dp"
        android:padding="3dp"
        android:paddingStart="4dp"
        android:text="Qty: 1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cart_list_product_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_list_product_price" />

    <Button
        android:id="@+id/cart_list_product_remove_item_btn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#F44336"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        android:drawableTint="@color/colorAccent"
        android:text="Remove"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>