<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/show_all_item_image"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redmi5a" />

    <TextView
        android:id="@+id/show_all_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/show_all_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_all_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Rs. 14,999"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/show_all_item_image"
        app:layout_constraintTop_toBottomOf="@+id/show_all_item_title" />

    <TextView
        android:id="@+id/show_all_item_delivery_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="cod Available"
        android:textColor="@color/successGreen"
        app:layout_constraintStart_toEndOf="@+id/show_all_item_image"
        app:layout_constraintTop_toBottomOf="@+id/show_all_item_price" />

    <TextView
        android:id="@+id/show_all_item_cut_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="19,999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/show_all_item_price"
        app:layout_constraintStart_toEndOf="@+id/show_all_item_price"
        app:layout_constraintTop_toTopOf="@+id/show_all_item_price" />

    <View
        android:id="@+id/divider14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/Grey"
        app:layout_constraintBottom_toBottomOf="@+id/show_all_item_cut_price"
        app:layout_constraintEnd_toEndOf="@+id/show_all_item_cut_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/show_all_item_cut_price"
        app:layout_constraintTop_toTopOf="@+id/show_all_item_cut_price" />

    <View
        android:id="@+id/divider15"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/Grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_all_item_image" />
</androidx.constraintlayout.widget.ConstraintLayout>